{
  "manifest_version": 3,
  "name": "RGBang",
  "version": "1.0.0",
  "description": "A vibrant, fast-paced arcade shooter.",
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "RGBang"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self';"
  }
}
